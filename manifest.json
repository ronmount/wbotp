{
  "manifest_version": 3,
  "name": "WB Notifications Reader",
  "version": "1.0.1",
  "description": "Читает уведомления из WB",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.wildberries.ru/*",
    "https://wbx-bell-v3.wildberries.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    },
    "default_title": "WB Notifications"
  },
  "icons": {
    "128": "icon128.png"
  }
}